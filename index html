        let activeLang = 'hi';

        // --- Visitor Count Logic ---
        function updateCounter() {
            let count = localStorage.getItem('visitorCount');
            if (!count) {
                count = 15000;
            } else {
                count = parseInt(count) + Math.floor(Math.random() * 3) + 1; // 1 to 3 increment for realism
            }
            localStorage.setItem('visitorCount', count);
            document.getElementById('count-num').innerText = count.toLocaleString();
        }

        function incrementOnTribute() {
            let count = parseInt(localStorage.getItem('visitorCount'));
            count += 1;
            localStorage.setItem('visitorCount', count);
            document.getElementById('count-num').innerText = count.toLocaleString();
        }

        function speak(text) {
            window.speechSynthesis.cancel();
            const msg = new SpeechSynthesisUtterance(text);
            const voices = window.speechSynthesis.getVoices();
            const target = (activeLang === 'hi') ? 'hi-IN' : 'en-IN';
            const voice = voices.find(v => v.lang === target);
            if(voice) msg.voice = voice;
            msg.lang = target;
            msg.rate = 0.85;
            window.speechSynthesis.speak(msg);
        }

        function bootstrap(l) {
            activeLang = l;
            document.getElementById('launch-pad').style.display = 'none';
            updateCounter();
            speak(store[l].welcome);
        }

        function typeWriter(text, elId) {
            let i = 0;
            const el = document.getElementById(elId);
            el.innerHTML = "";
            function play() {
                if (i < text.length) {
                    el.innerHTML += text.charAt(i);
                    i++;
                    setTimeout(play, 50);
                }
            }
            play();
        }

        function executeTribute() {
            const name = document.getElementById('userName').value.trim();
            if(!name) { speak(store[activeLang].err); return; }

            const pool = store[activeLang].list;
            const shayari = pool[Math.floor(Math.random() * pool.length)];

            // UI Changes
            document.getElementById('candle-frame').className = 'is-lit';
            document.getElementById('title-main').innerText = "VANDE MATARAM";
            document.getElementById('title-main').style.letterSpacing = "5px";
            document.getElementById('tribute-badge').innerText = store[activeLang].success + name;

            incrementOnTribute();
            typeWriter(shayari, 'output-text');
            speak(store[activeLang].success + name + ". . ." + shayari);
        }

        window.speechSynthesis.onvoiceschanged = () => { window.speechSynthesis.getVoices(); };
    </script>
